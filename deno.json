{
  "lock": false,
  "tasks": {
    "start": "deno run -A ./src/main/server.ts",
    "dev": "deno run -A --watch ./src/main/server.ts"
  },
  "imports": {
    "$express": "npm:express@4.18.2",
		"$socket": "npm:socket.io@4.7.1",
    "cors": "npm:cors",
    "crypto/": "https://deno.land/x/crypto/",
    "mongoose": "npm:mongoose",
    "zod": "https://deno.land/x/zod@v3.21.4/mod.ts",
    "mailer": "npm:nodemailer",
    "@types/mailer": "npm:@types/nodemailer",
    "fs": "https://deno.land/std/fs/mod.ts",
    "path": "https://deno.land/std/path/mod.ts",
    "dotenv": "https://deno.land/x/dotenv@v3.2.2/load.ts",

    "@database/": "./src/database/",
    "@core/": "./src/core/",
    "@controllers/": "./src/controllers/",
    "@main/": "./src/main/"
  },
  "fmt": {
    "useTabs": true,
    "indentWidth": 2,
    "lineWidth": 60,
    "semiColons": false,
    "singleQuote": false,
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "data"
    ]
  },
  "compilerOptions": {
    "strict": true
  }
}